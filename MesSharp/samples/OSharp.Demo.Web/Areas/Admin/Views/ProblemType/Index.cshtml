}
@section customScript
{
    <script type="text/javascript">
        var selectTreeData = null;
        columns = [[
            { field: "Text", title: "问题类型名称", width: 150, sortable: true, editor: { type: "validatebox", options: { required: true, validType: "length[1,200]" } } },
            { field: "Value", title: "部问题类型值", width: 150, sortable: true, editor: { type: "validatebox", options: { required: true, validType: "length[1,200]" } } },
