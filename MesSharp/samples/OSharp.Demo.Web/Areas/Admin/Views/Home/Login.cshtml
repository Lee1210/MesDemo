@{
    ViewBag.Login = Url.Action("LoginResult");
}
<html>
<head>
    <meta charset="UTF-8">
    <title>Custom TextBox - jQuery EasyUI Demo</title>
    <link rel="stylesheet" type="text/css" href="/Content/themes/default/easyui.css">
    <link rel="stylesheet" type="text/css" href="/Content/themes/icon.css">
    
    <script type="text/javascript" src="/Scripts/jquery-1.11.1.js"></script>
    <script type="text/javascript" src="/Scripts/jquery.easyui-1.4.1.js"></script>
</head>
<body>
    <h2>Custom TextBox</h2>
    <p>This example shows how to custom a login form.</p>
    <div style="margin:20px 0;"></div>
    <div class="easyui-panel" title="Login to system" style="width:400px;padding:30px 70px 20px 70px">
        <div style="margin-bottom:10px">
            <input id="username" class="easyui-textbox" style="width:100%;height:40px;padding:12px" data-options="prompt:'Username',iconCls:'icon-man',iconWidth:38">
        </div>
        <div style="margin-bottom:20px">
            <input id="password" class="easyui-textbox" type="password" style="width:100%;height:40px;padding:12px" data-options="prompt:'Password',iconCls:'icon-lock',iconWidth:38">
        </div>
        <div style="margin-bottom:20px">
            <input type="checkbox" checked="checked">
            <span>Remember me</span>
        </div>
        <div>
            <a class="easyui-linkbutton" id="save" data-options="iconCls:'icon-ok'" style="padding:5px 0px;width:100%;">
                <span style="font-size:14px;">Login</span>
            </a>
        </div>
    </div>
    <script>
        $('#save').bind('click', submitEdits);
        function ajaxResultHandler(data) {
            if (data.Type == "Success") {

            }
            if (data.Type == "Error") {
                $.Mes.easyui.msg.error(data.Content);
            } else {
                $.Mes.easyui.msg.tip(data.Content);
            }
        }
        function submitEdits(objs) {
            $.post("@ViewBag.Login", { username: $('#username').textbox('getText'), password: $('#password').textbox('getText') });
        }
    </script>
</body>
</html>